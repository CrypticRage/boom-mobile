<?xml version="1.0" encoding="utf-8"?>
        
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<com.anvil.android.boom.BoomView android:id="@+id/main_canvas"
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
                      		                           	       
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true">
    
		<!-- top left -->
    	<TextView android:id="@+id/top_left"
       		android:textAlign="start"
       		android:textColor="#ffffffff"
        	android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="Top Left"/>

		<!-- top middle -->
		<TextView android:id="@+id/top_middle"
       		android:textAlign="center"
       		android:textColor="#ffff0000"
        	android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="Top Middle"/>
		
		<!-- top right -->
		<TextView android:id="@+id/top_right"
       		android:textAlign="end"
       		android:textColor="#ffffffff"
        	android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text=""/>

		<!-- close button -->
		<ImageButton android:id="@+id/close_button"
        	android:layout_width="20px"
        	android:layout_height="20px"
        	android:paddingLeft="10px"
        	android:paddingRight="10px"
        	android:background="#00000000"
			android:src="@drawable/close_button" />

	</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true">
    
		<ImageButton android:id="@+id/button1"
			android:layout_width="50px"
			android:layout_height="50px"
			android:src="@drawable/std_missile_icon" />
    	
		<ImageButton android:id="@+id/button2"
			android:layout_width="50px"
			android:layout_height="50px"
			android:src="@drawable/smart_bomb_icon" />

	</LinearLayout>

</RelativeLayout>
